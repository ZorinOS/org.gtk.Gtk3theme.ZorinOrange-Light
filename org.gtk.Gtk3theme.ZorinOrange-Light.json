{
  "id": "org.gtk.Gtk3theme.ZorinOrange-Light",
  "branch": "3.22",
  "runtime": "org.freedesktop.Platform",
  "build-extension": true,
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "21.08",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "ZorinOrange-Light",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -pm 755 /usr/share/runtime/share/themes/ZorinOrange-Light/gtk-3.0",
        "cp -fr ZorinOrange-Light/gtk-3.0/* /usr/share/runtime/share/themes/ZorinOrange-Light/gtk-3.0"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/ZorinOS/zorin-desktop-themes/archive/3.4.4.tar.gz",
          "sha256": "8d22ad203116990db33809d34b2d07c7f87fce6a402fc8e86295c4baac5d51e1"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.ZorinOrange-Light.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.ZorinOrange-Light --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.ZorinOrange-Light"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.ZorinOrange-Light.appdata.xml"
        }
      ]
}
  ]
}
