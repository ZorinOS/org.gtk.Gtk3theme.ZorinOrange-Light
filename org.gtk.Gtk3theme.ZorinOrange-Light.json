{
  "id": "org.gtk.Gtk3theme.ZorinOrange-Light",
  "branch": "3.22",
  "runtime": "org.freedesktop.Platform",
  "build-extension": true,
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "18.08",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "ZorinOrange-Light",
      "buildsystem": "simple",
      "build-commands": [
        "install -dm755 /usr/share/runtime/share/themes/ZorinOrange-Light/gtk-3.0",
        "cp -aL ZorinOrange-Light/gtk-3.0/* /usr/share/runtime/share/themes/ZorinOrange-Light/gtk-3.0",
        "cp -a ZorinOrange-Light/index.theme /usr/share/runtime/share/themes/ZorinOrange-Light"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/ZorinOS/zorin-desktop-themes/archive/2.1.5.tar.gz",
          "sha256": "b7c829ee66c50560e86e2c41b27434a822df2d10c2ef99d264b94b74f6c6ff05"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.ZorinOrange-Light.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.ZorinOrange-Light --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.ZorinOrange-Light"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.ZorinOrange-Light.appdata.xml"
        }
      ]
}
  ]
}
